<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:id="@+id/back_button"
        android:layout_row="0"
        android:layout_column="0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top|center_horizontal"
        android:layout_row="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageView
                android:id="@+id/sumiel_img"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/border"
                android:clickable="false"
                android:padding="5dp"
                android:src="@mipmap/candy_sucette_miel" />

            <ImageView
                android:id="@+id/sumiel_button"
                android:layout_width="@dimen/clickable_width"
                android:layout_height="@dimen/clickable_height"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:src="@mipmap/blank" />

            <LinearLayout
                android:id="@+id/LinearSuMiel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewNbreSuMiel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="@string/Nbre_SuMiel"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/viewSuMielPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_plus"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/plusText" />

            </LinearLayout>

            <ImageView
                android:id="@+id/sasumiel_img"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/border"
                android:padding="5dp"
                android:src="@mipmap/candy_sasucette_miel" />

            <ImageView
                android:id="@+id/sasumiel_button"
                android:layout_width="@dimen/clickable_width"
                android:layout_height="@dimen/clickable_height"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:src="@mipmap/blank" />

            <LinearLayout
                android:id="@+id/LinearSaSuMiel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewNbreSaSuMiel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="@string/Nbre_SaSuMiel"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/viewSaSuMielPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_plus"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/plusText" />

            </LinearLayout>

            <ImageView
                android:id="@+id/boncafe_img"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:adjustViewBounds="false"
                android:background="@drawable/border"
                android:contentDescription="jus"
                android:padding="5dp"
                android:src="@mipmap/candy_cafe" />

            <ImageView
                android:id="@+id/boncafe_button"
                android:layout_width="@dimen/clickable_width"
                android:layout_height="@dimen/clickable_height"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:src="@mipmap/blank" />

            <LinearLayout
                android:id="@+id/LinearBonCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewNbreBonCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="@string/Nbre_BonCafe"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/viewBonCafePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_plus"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/plusText" />
            </LinearLayout>

            <ImageView
                android:id="@+id/saboncafe_img"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="1"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:adjustViewBounds="false"
                android:background="@drawable/border"
                android:contentDescription="jus"
                android:padding="5dp"
                android:src="@mipmap/candy_sacafe" />

            <ImageView
                android:id="@+id/saboncafe_button"
                android:layout_width="@dimen/clickable_width"
                android:layout_height="@dimen/clickable_height"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:src="@mipmap/blank" />

            <LinearLayout
                android:id="@+id/LinearSaBonCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewNbreSaBonCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="@string/Nbre_SaBonCafe"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/viewSaBonCafePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_plus"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/plusText" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sabonourson_img"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:adjustViewBounds="false"
                android:background="@drawable/border"
                android:contentDescription="jus"
                android:padding="5dp"
                android:src="@mipmap/candy_ourson" />

            <ImageView
                android:id="@+id/sabonourson_button"
                android:layout_width="@dimen/clickable_width"
                android:layout_height="@dimen/clickable_height"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="4"
                android:src="@mipmap/blank" />

            <LinearLayout
                android:id="@+id/LinearSaBonOurson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewNbreSaBonOurson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:text="@string/Nbre_SaBonOurson"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/viewSaBonOursonPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_plus"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/plusText" />
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="5" />

        </GridLayout>
    </ScrollView>

</GridLayout>